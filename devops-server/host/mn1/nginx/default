## Version 2019/08/01 - Changelog: https://github.com/linuxserver/docker-letsencrypt/commits/master/root/defaults/default

# redirect all traffic to https
server {
	listen 80 default_server;
	listen [::]:80 default_server;
	server_name _;
	return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name kibana.kaseb.xyz;

    include /config/nginx/ssl.conf;

    client_max_body_size 0;

    # enable for ldap auth, fill in ldap details in ldap.conf
    #include /config/nginx/ldap.conf;
    proxy_cache my_cache;
    add_header X-Cache-Status $upstream_cache_status;
    gzip on;
    gzip_vary on;
    gzip_min_length 10240;
    gzip_proxied expired no-cache no-store private auth;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml;
    gzip_disable "MSIE [1-6]\.";
    location / {

        include /config/nginx/proxy.conf;
        resolver 127.0.0.11 valid=30s;
        proxy_pass http://kibana:5601;
    }
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name cadvisor.kaseb.xyz;

    include /config/nginx/ssl.conf;

    client_max_body_size 0;

    # enable for ldap auth, fill in ldap details in ldap.conf
    #include /config/nginx/ldap.conf;
    proxy_cache my_cache;
    add_header X-Cache-Status $upstream_cache_status;
    gzip on;
    gzip_vary on;
    gzip_min_length 10240;
    gzip_proxied expired no-cache no-store private auth;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml;
    gzip_disable "MSIE [1-6]\.";

    auth_basic           "Administrator’s Area";
    auth_basic_user_file /config/htpasswd;
    
    location / {

        include /config/nginx/proxy.conf;
        resolver 127.0.0.11 valid=30s;
        proxy_pass http://cadvisor:8080;
    }
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name node.kaseb.xyz;

    include /config/nginx/ssl.conf;

    client_max_body_size 0;

    # enable for ldap auth, fill in ldap details in ldap.conf
    #include /config/nginx/ldap.conf;
    proxy_cache my_cache;
    add_header X-Cache-Status $upstream_cache_status;
    gzip on;
    gzip_vary on;
    gzip_min_length 10240;
    gzip_proxied expired no-cache no-store private auth;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml;
    gzip_disable "MSIE [1-6]\.";

    auth_basic           "Administrator’s Area";
    auth_basic_user_file /config/htpasswd;

    location / {

        include /config/nginx/proxy.conf;
        resolver 127.0.0.11 valid=30s;
        proxy_pass http://nodeexporter:9100;
    }
}


# enable proxy cache for auth
#proxy_cache_path cache/ keys_zone=auth_cache:10m;
proxy_cache_path cache/ levels=1:2 keys_zone=my_cache:10m max_size=5g 
                 inactive=60m use_temp_path=off;